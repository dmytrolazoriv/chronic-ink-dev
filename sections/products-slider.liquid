{{ 'section-products-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 768px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="products-slider section-{{ section.id }}">
  <div class="container">
    <div class="products-slider__top slider-top">
      <div class="slider-top__info">
        <h2 class="slider-top__title">recommendations for you</h2>
        <a class="slider-top__link" href="#">Shop now</a>
      </div>
      <div class="slider-top__controls controls">
        <button type="button" class="slider-top__button slider-top__button-prev slider__button_prev slider__button">
            {% render 'icon-slider-arrow' %}
        </button>
        <button type="button" class="slider-top__button slider-top__button-next slider__button_next slider__button">
          {% render 'icon-slider-arrow' %}
        </button>
      </div>
    </div>
    <div class="products-slider__main slider-main">
      <div class="slider-main__slider">
        <div class="slider-main__wrapper swiper-wrapper">
          {%- for block in section.blocks -%}
            <div class="slider-main__slide slider-slide swiper-slide">
                <div class="slider-slide__wrapper">
                  <div class="slider-slide__image">
                    {% if block.settings.image != blank %}
                      {{ block.settings.image | image_url: width: 346 | image_tag }}
                    {% endif %}
                    <a href="#" class="slider-slide__button button">Add to cart</a>
                  </div>
                  <h3 class="slider-slide__title">{{ block.settings.title }}</h3>
                  <p class="slider-slide__nickname">{{ block.settings.description }}</p>
                  <p class="slider-slide__price">{{ block.settings.price }}</p>
                </div>
            </div>
          {%- endfor -%}
          {% comment %} <div class="slider-main__slide slider-slide swiper-slide">Slide 2</div>
          <div class="slider-main__slide slider-slide swiper-slide">Slide 3</div>
          <div class="slider-main__slide slider-slide swiper-slide">Slide 4</div>
          <div class="slider-main__slide slider-slide swiper-slide">Slide 5</div>
          <div class="slider-main__slide slider-slide swiper-slide">Slide 6</div>
          <div class="slider-main__slide slider-slide swiper-slide">Slide 7</div>
          <div class="slider-main__slide slider-slide swiper-slide">Slide 8</div>
          <div class="slider-main__slide slider-slide swiper-slide">Slide 9</div> {% endcomment %}
        </div>
        <div class="swiper-scrollbar"></div>
      </div>
    </div>
  </div>
</div>

{% schema %}
    {
      "name": "Products slider",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Slideshow"
        },
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 2,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 32
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 2,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 32
        },
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_mobile_heading"
        },
        {
            "type": "range",
            "id": "padding_top_mobile",
            "min": 0,
            "max": 100,
            "step": 2,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 24
        },
        {
            "type": "range",
            "id": "padding_bottom_mobile",
            "min": 0,
            "max": 100,
            "step": 2,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 24
        }
      ],
      "blocks": [
         {
           "name": "Slide",
           "type": "slide",
           "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Slide image"
            },
            {
              "type": "text",
              "id": "title",
              "label": "Slide title",
              "default": "David"
            },
            {
              "type": "text",
              "id": "description",
              "label": "Slide description",
              "default": "Uzi (@uzi.tattoo_)"
            },
            {
              "type": "text",
              "id": "price",
              "label": "Slide price",
              "default": "$ 114"
            }
           ]
         }
      ],
      "presets": [
        {
          "name": "Products slider",
          "settings": {
          },
          "blocks": [
            {
              "type": "slide"
            },
            {
              "type": "slide"
            }
          ]
        }
      ],
      "enabled_on": {
        "templates": ["*"]
      }
    }
    {% endschema %}
    