{{ 'section-services-new.css' | asset_url | stylesheet_tag }}
{{ 'component-itc-custom-select.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 768px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign selectedBlockIndex = 0 %} {%- comment -%} Default to the first block {% endcomment -%}
{% for block in section.blocks %}
  {% if block.settings.show_location %}
    {% assign selectedBlockIndex = forloop.index %} {%- comment -%} Update the selected block index {% endcomment -%}
    {% break %}
  {% endif %}
{% endfor %}

<div class="services-new section-{{ section.id }}">
    <div class="services-new__items">
      {%- for block in section.blocks -%}
  
        <div class="services-new__item item-services-new" {{ block.shopify_attributes }}>

        <div class="item-services-new__media">
          {{ block.settings.item_image | image_url: width: 834 | image_tag }}
        </div>

        <div class="item-services-new__info">
          <h3 class="item-services-new__title">
            {{ block.settings.item_title }}
          </h3>

          {%- if forloop.index == selectedBlockIndex -%}
              <!-- Изначально не активна ни одна опция -->
            <div class="itc-select" id="select-{{ forloop.index }}" data-select-index="{{ forloop.index }}">
              <!-- Кнопка для открытия выпадающего списка -->
              <button type="button" class="itc-select__toggle" name="car" value="" data-select="toggle" data-index="-1">
                Select location
              </button>
              <!-- Выпадающий список -->
              <div class="itc-select__dropdown">
                <ul class="itc-select__options">
                  <li class="itc-select__option" data-select="option" data-value="location" data-index="{{ forloop.index0 }}">Location 1</li>
                  <li class="itc-select__option" data-select="option" data-value="location" data-index="{{ forloop.index0 }}">Location 2</li>
                  <li class="itc-select__option" data-select="option" data-value="location" data-index="{{ forloop.index0 }}">Location 3</li>
                  <li class="itc-select__option" data-select="option" data-value="location" data-index="{{ forloop.index0 }}">Location 4</li>
                  <li class="itc-select__option" data-select="option" data-value="location" data-index="{{ forloop.index0 }}">Location 5</li>
                </ul>
              </div>
            </div>
          {%- endif -%}

          <a class="item-services-new__link" href="{{ block.settings.button_link }}">
            {{ block.settings.button_text }}
          </a>
        </div>
     
        </div>
      {%- endfor -%}
    </div>
</div>

